<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minimal Product Catalog</title>
    <!-- Bootstrap 5 CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- jQuery CDN (for AJAX functionality) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <style>
        .product-card {
            height: 250px;
            overflow: hidden;
        }

        .main-image {
            height: 250px;
            width: 100%;
            object-fit: cover;
        }

        .product-info {
            overflow: hidden;
            flex-grow: 1;
            text-overflow: ellipsis;
        }

        .product-gallery {
            display: grid;
            grid-template-columns: repeat(auto-fill, 50px);
            grid-gap: 0;
            width: 300px;
            height: 250px;
            border: none;
            overflow: hidden;
            flex-shrink: 0;
        }

        .product-gallery img {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border: none;
            margin: 0;
            padding: 0;
        }

        .page-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .row.g-0 {
            margin: 0;
        }
    </style>
</head>
<body>

<div class="container">
    <!-- Category picker and search -->
    <div class="row my-4">
        <div class="col-md-3">
            <select class="form-select" id="category-select">
                <option selected>Select Category</option>
                {% for type in productTypes %}
                    <option value="{{ type }}">{{ type }}</option>
                {% endfor %}
            </select>        
        </div>
        <div class="col-md-6">
        <input type="text" id="search-box" class="form-control" placeholder="Search products...">
        </div>
    </div>

    {% set image = pimcore_asset(639) %}

    <!-- Product catalog container -->
    <div id="catalog-container">
        <!-- Product Card Example -->
        <div class="card mb-4 product-card">
            <table style="table-layout: fixed; width: 100%; height: 100%;">
                <tr>
                    <td style="width: 375px; vertical-align: middle; border: none;">
                        <img src="{{ image.thumbnail('katalog') }}" class="img-fluid main-image" alt="Product Image" style="height: 100%; object-fit: cover; border-radius: inherit;">
                    </td>
                    <td style="vertical-align: middle; border: none; overflow: hidden;">
                        <div class="card-body product-info">
                            <h5 class="card-title">Product Name</h5>
                            <p class="card-text" style="text-overflow: ellipsis; overflow: hidden; white-space: nowrap;">
                                This is a description of the product. Additional information can be added here. Multiple lines of text should still stay within bounds.
                            </p>
                        </div>
                    </td>
                    <td style="width: 300px; vertical-align: middle; border: none;">
                        <div class="product-gallery">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                            <img src="{{ image.thumbnail('album') }}" alt="thumb1">
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <!-- Add more cards dynamically -->
    </div>

    <!-- Pagination -->
    <div class="page-container">
        <nav>
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>
    </div>
</div>

<!-- Bootstrap 5 Bundle with Popper.js CDN (for JS components) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

