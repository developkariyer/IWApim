{% extends 'sticker/base.html.twig' %}
{% block title %} Sticker {% endblock %}
{% block content %}

<div class="container mt-2">
    <div class="row">
        <div class="col-12 mt-5">
            <h1>Add New Group</h1>
            <form method="post" action="/sticker/add-sticker-group" class="mt-3">
                <input type="text" name="form_data" placeholder="Group Name" class="form-control mb-3">
                <div class="d-flex flex-column">
                    <button type="submit" class="btn btn-success mb-2">Add Group</button>
                    <a href="{{ path('sticker_main_page') }}" class="btn btn-primary">Main Page</a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}