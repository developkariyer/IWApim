{% extends 'sticker/base.html.twig' %}
{% block title %} Sticker {% endblock %}
{% block content %}

    <div class="container mt-2">
        <div class="row">
            <div class="col-12 mt-5">
                <h1>Yeni Etiket Oluştur</h1>
                <form method="post" action="/sticker/add-sticker" class="mt-3" onsubmit="return validateForm()">
                    <div class="mb-3">
                        <input
                                type="text"
                                name="form_data"
                                id="form_data"
                                placeholder="IWASKU"
                                class="form-control"
                                required>
                        <div class="invalid-feedback">
                            Lütfen IWASKU bilgisini giriniz.
                        </div>
                    </div>
                    <div class="mb-3">
                        <select
                                name="group_id"
                                id="group_id"
                                class="form-control"
                                required>
                            <option value="" disabled selected>Etiket Grubu</option>
                            {% for group in groups %}
                                <option value="{{ group.id }}">{{ group.name }}</option>
                            {% else %}
                                <option value="" disabled>Etiket Grubu Bulunamadı</option>
                            {% endfor %}
                        </select>
                        <div class="invalid-feedback">
                            Lütfen bir etiket grubu seçiniz.
                        </div>
                    </div>

                    <div class="d-flex flex-column">
                        <button type="submit" class="btn btn-success mb-2">Etiket Oluştur</button>
                        <a href="{{ path('sticker_main_page') }}" class="btn btn-primary">Ana Sayfa</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block body_scripts %}
    <script>
        function validateForm() {
            const formData = document.getElementById('form_data');
            const groupId = document.getElementById('group_id');

            let isValid = true;

            if (!formData.value.trim()) {
                formData.classList.add('is-invalid');
                isValid = false;
            } else {
                formData.classList.remove('is-invalid');
            }

            if (!groupId.value) {
                groupId.classList.add('is-invalid');
                isValid = false;
            } else {
                groupId.classList.remove('is-invalid');
            }

            return isValid;
        }
    </script>
{% endblock %}