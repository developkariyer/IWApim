{% endblock %}

{% block head_scripts %}
    <!-- script src="/path/to/head-custom.js"></script -->
{% endblock %}

{% block body_scripts %}
    <!-- script src="/path/to/body-custom.js"></script -->
{% endblock %}

{% block header %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/ozon">Ozon Listing</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>
{% endblock %}

{% block content %}
    <div class="container mt-4">
        <h1>{{ task.key }} - Products</h1>
        <div class="accordion" id="sizeAccordion">
            {% for size, colorGroup in children %}
                {% set sanitizedSize = size|replace({' ': '_', '/': '_', '\\': '_', '-': '_'})|lower %}
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingSize{{ sanitizedSize }}">{{ size }}</h2>
                    <div class="accordion-body">
                        {% for color, child in colorGroup %}
                            {% set sanitizedColor = color|replace({' ': '_', '/': '_', '\\': '_', '-': '_'})|lower %}
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="childCheckbox{{ child.getId() }}" value="{{ child.getId() }}" {% if selectedChildren[child.getId()] is defined and selectedChildren[child.getId()] %}checked{% endif %}>
                                <label class="form-check-label" for="childCheckbox{{ child.getId() }}">
                                    {{ child.getKey() }}
                                </label>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
