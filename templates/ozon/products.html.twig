{# products.html.twig #}

{% extends 'ozon/base.html.twig' %}

{% block title %}Ozon Listeleme Görevi{% endblock %}

{% block stylesheets %}
    <!-- link rel="stylesheet" href="/path/to/custom.css" -->
{% endblock %}

{% block head_scripts %}
    <!-- script src="/path/to/head-custom.js"></script -->
{% endblock %}

{% block body_scripts %}
    <!-- script src="/path/to/body-custom.js"></script -->
{% endblock %}

{% block header %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/ozon">Ozon Listing</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>
{% endblock %}

{% block content %}
    <div class="container mt-4">
        <h1>{{ task.key }} - {{ parentProduct.key }}</h1>
        <form method="post" action="/ozon/modify/{{ task.id }}">
            {% for size, colorGroup in children %}
                {% set sanitizedSize = size|replace({' ': '_', '/': '_', '\\': '_', '-': '_'})|lower %}
                <div class="size-group">
                    <h4>{{ parentProduct.key }} {{ size }}</h4>
                    {% for color, child in colorGroup %}
                        {% set sanitizedColor = color|replace({' ': '_', '/': '_', '\\': '_', '-': '_'})|lower %}
                        <div class="color-group">
                            <h5>{{ color }}</h5>
                            <div class="form-group mb-2">
                                <label for="childSelect{{ child.getId() }}">{{ child.getKey() }}</label>
                                <select class="form-select" id="childSelect{{ child.getId() }}" name="selectedChildren[{{ child.getId() }}]">
                                    <option value="0" {% if selectedChildren[child.getId()] is defined and selectedChildren[child.getId()] == 0 %}selected{% endif %}>Hiçbiri</option>
                                    {% for item in child.getListingItems() %}
                                        <option value="{{ item.getId() }}" {% if selectedChildren[child.getId()] is defined and selectedChildren[child.getId()] == item.getId() %}selected{% endif %}>{{ item.getKey() }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
            <button type="submit" class="btn btn-primary mt-3">Güncelle</button>
        </form>
    </div>
{% endblock %}

