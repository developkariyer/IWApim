{# task.html.twig #}

{% extends 'ozon/base.html.twig' %}

{% block title %}Ozon Listeleme GÃ¶revi{% endblock %}

{% block stylesheets %}
    <!-- link rel="stylesheet" href="/path/to/custom.css" -->
{% endblock %}

{% block head_scripts %}
    <!-- script src="/path/to/head-custom.js"></script -->
{% endblock %}

{% block body_scripts %}
    <!-- script src="/path/to/body-custom.js"></script -->
{% endblock %}

{% block header %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/ozon">Ozon Listing</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            {{ task.key }}
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            {% for productId, productGroup in products %}
                                <li class="dropdown-item dropdown">
                                    <a class="dropdown-item" href="#" id="dropdownSubMenu{{ productId }}" role="button" data-bs-toggle="dropdown" aria-expanded="false">{{ productGroup.product }}</a>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownSubMenu{{ productId }}">
                                        {% for child in productGroup.children %}
                                            <li><a class="dropdown-item" href="/ozon/task/{{ child.getObject().getId() }}">{{ child.getObject().getKey() }}</a></li>
                                        {% endfor %}
                                    </ul>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

{% block content %}
    <div class="container mt-4">
        <h1>{{ task.key }} - Products</h1>
        <div class="accordion" id="productAccordion">
            {% for productId, productGroup in products %}
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading{{ productId }}">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ productId }}" aria-expanded="true" aria-controls="collapse{{ productId }}">
                            {{ productGroup.product }}
                        </button>
                    </h2>
                    <div id="collapse{{ productId }}" class="accordion-collapse collapse" aria-labelledby="heading{{ productId }}" data-bs-parent="#productAccordion">
                        <div class="accordion-body">
                            <ul class="list-group">
                                {% for child in productGroup.children %}
                                    <li class="list-group-item">
                                        <a href="/ozon/task/{{ child.getObject().getId() }}">{{ child.getObject().getKey() }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
